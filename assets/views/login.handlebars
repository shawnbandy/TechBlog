<section class="container d-flex w-100 text-center justify-content-center flex-column m-3">
    <h1>Log in</h1>
    <div class="card col-6 align-self-center">
        <form class="form justify-content-center text-center d-inline" id="loginForm">
            <div class="form-group">
                <h4>Username</h4>
                <input class="form-input text-center" type="text" placeholder="username" id="usernameLogin" />
            </div>
            <div class="form-group">
                <h4>Password</h4>
                <input class="form-input text-center" type="text" placeholder="password" id="passwordLogin" />
            </div>
            <div>
                <button class="btn btn-primary" type="submit">Login</button>
            </div>
        </form>
    </div>
</section>
<section class="container d-flex w-100 text-center justify-content-center flex-column m-3">
    <h1>Create an account</h1>
    <div class="card col-6 align-self-center">
        <form class="justify-content-center text-center d-inline" id="loginCreate">
            <div class="form-group">
                <h4>Username</h4>
                <input class="form-input text-center" type="text" placeholder="username" id="usernameCreate" />
            </div>
            <div class="form-group">
                <h4>Password</h4>
                <input class="form-input text-center" type="text" placeholder="password" id="passwordCreate" />
            </div>
            <div>
                <button class="btn btn-primary" type="submit" id="loginCreate">Create</button>
            </div>
        </form>
    </div>
</section>

<script src="./js/login.js"></script>