<section class="container row d-flex justify-content-center m-0 p-0 w-100">
      <div class="mt-2 card text-center col-12">
          <div class="mt-3 container row d-flex align-content-center">
            <div class="d-flex flex-column col-10 h-25 justify-content-center">
              <p class="m-0 col-12 font-weight-bolder">{{title}}</p>
              <p class="m-0 col-12">{{content}}</p>
              <p class="m-0" style="font-size: smaller;">By: {{user.username}} on {{format_date createdAt}}</p>
              <p class="d-none">{{id}}</p>
            </div>
            <div class="col-2 m-0 p-0 d-flex h-50 justify-content-end">
              <button class="btn btn-dark d-flex h-100 align-items-center showCommentsButton" type="button" id={{id}}>Comments</button>
            </div>
          </div>
      </div>
      <div id="commentSection" class="d-none row col-8 align-items-center col-12">
        <p class="m-0 p-0 bg-light w-100 text-center">test</p>
      </div>
  </section>

<script src="./js/comments.js"></script>