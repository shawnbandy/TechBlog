<section
  class='container d-flex w-100 text-center justify-content-center flex-column m-3'
  style='background-color: #4A4E69;'
>
  <div class='card col-10 align-self-center'>
    <form
      class='form justify-content-center text-center d-inline'
      id='postForm'
    >
      <div class='form-group'>
        <h4>Title</h4>
        <input
          class='form-input text-center'
          type='text'
          placeholder='Title'
          id='title'
        />
      </div>
      <div class='form-group'>
        <h4>Text</h4>
        <textarea
          class='form-control'
          id='textArea'
          placeholder='Your Thoughts Here!'
          rows='3'
        ></textarea>
      </div>
      <div>
        <button class='btn btn-primary' type='submit'>Submit</button>
      </div>
    </form>
  </div>
</section>

