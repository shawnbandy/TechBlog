<section class="container row d-flex justify-content-center m-0 p-0 w-100">
      <div class="mt-2 card text-center col-12">
          <div class="mt-3 container row d-flex align-content-center">
            <div class="d-flex flex-column col-12 h-25 justify-content-center mb-3">
              <p class="m-0 col-12 font-weight-bolder">{{post.title}}</p>
              <p class="m-0 col-12">{{post.content}}</p>
              <p class="m-0" style="font-size: smaller;">By: {{post.user.username}} on {{format_date post.createdAt}}</p>
              <button id="addComment" class="align-self-end">Add a Comment</button>
            </div>
          </div>
      </div>
      <div class="col-12">
        <form class="form justify-content-center text-center d-flex" id="postForm">
          <div class="form-group m-0 col-10 text-center">
            <textarea class="form-control text-center" id="commentArea" placeholder="Your Thoughts Here!" rows="2"></textarea>
          </div>
          <div class="align-self-center">
            <button class="btn btn-primary" type="submit">Submit</button>
          </div>
        </form>
      </div>
        {{#if loggedIn}}
        {{#each post.comments as |comment|}}
        {{> comment-detail}}
        {{/each}}
        {{/if}}
</section>

<script src="../js/viewPost.js"></script>